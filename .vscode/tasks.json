{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/rasterizer",
        "-std=c++17"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
  ],
  "version": "2.0.0"
}